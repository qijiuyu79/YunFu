<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rel_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <com.yunfu.help.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_head"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012-03-12"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/tv_nickname"
            android:layout_marginTop="3dp"/>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_marginTop="15dp"
            android:text="尝试了几次还是不行,博主还有其他方法吗尝试了几次还是不行;博主还有其他方法吗"
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="7dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_img"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/tv_location"
            android:drawablePadding="10dp"
            android:text="北京市昌平区天通苑北二区"
            android:textSize="13sp"
            android:textColor="#999999"/>

        <LinearLayout
            android:id="@+id/lin_give_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_give_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/a7_"/>

            <TextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_common"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/a78"/>

            <TextView
                android:id="@+id/tv_common_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_coll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_coll"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/a7q"/>

            <TextView
                android:id="@+id/tv_coll_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@id/lin_coll"
            android:layout_marginTop="15dp"
            android:background="#EBEBEB" />

    </RelativeLayout>

</RelativeLayout>